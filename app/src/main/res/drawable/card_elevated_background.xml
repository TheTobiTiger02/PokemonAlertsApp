<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow layer -->
    <item android:top="2dp" android:left="2dp" android:right="2dp" android:bottom="4dp">
        <shape android:shape="rectangle">
            <solid android:color="#10000000" />
            <corners android:radius="16dp" />
        </shape>
    </item>
    <!-- Main card background -->
    <item android:top="0dp" android:left="0dp" android:right="4dp" android:bottom="6dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/cardBackground" />
            <corners android:radius="16dp" />
            <stroke android:width="1dp" android:color="@color/dividerColor" />
        </shape>
    </item>
</layer-list>